<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime">


    <Style x:Key="SmallFontSize" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style x:Key="MediumFontSize" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style x:Key="LargeFontSize" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
    </Style>
    <Style x:Key="XLargeFontSize" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
    </Style>
    <!--<sys:Double x:Key="SmallFontSize">12</sys:Double>

    <sys:Double x:Key="MediumFontSize">14</sys:Double>

    <sys:Double x:Key="LargeFontSize">18</sys:Double>

    <sys:Double x:Key="XLargeFontSize">22</sys:Double>-->

</ResourceDictionary>