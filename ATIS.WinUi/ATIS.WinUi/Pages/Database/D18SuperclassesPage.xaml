    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>

        <!--<StackPanel x:Name="MainGrid" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
            <Button Command="{Binding OkCommand}" Content="Ok" />
        </StackPanel>-->



        <TabView TabWidthMode="SizeToContent">
            <TabView.TabStripHeader>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

                    <!--<TextBox PlaceholderText="Regnum">
                        <TextBox.Text>
                            <Binding
                                Mode="TwoWay"
                                Path="SearchRegnumName"
                                UpdateSourceTrigger="PropertyChanged" />
                        </TextBox.Text>
                    </TextBox>-->

                    <AutoSuggestBox
                        x:Name="AutoSuggestBox"
                        Width="150"
                        Margin="2"
                        VerticalAlignment="Center"
                        PlaceholderText="Regnum"
                        QueryIcon="Find"
                        TextChanged="AutoSuggestBox_OnTextChanged">
                        <!--<AutoSuggestBox.Text>
                            <Binding
                                Mode="TwoWay"
                                Path="SearchRegnumName"
                                UpdateSourceTrigger="PropertyChanged" />
                        </AutoSuggestBox.Text>-->
                    </AutoSuggestBox>

                    <Button
                        Width="60"
                        Margin="2"
                        Command="{x:Bind RegnumsViewModel.GetRegnumsByNameOrIdCommand, Mode=OneWay}"
                        Content="Search"
                        CornerRadius="15" />
                    <Button
                        Width="60"
                        Margin="2"
                        Command="{x:Bind RegnumsViewModel.AddRegnumCommand, Mode=OneWay}"
                        Content="Add"
                        CornerRadius="15" />
                </StackPanel>
            </TabView.TabStripHeader>
            <TabView.TabItems>
                <TabViewItem Header="Regnum">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Filter" />
                    </TabViewItem.IconSource>
                    <ScrollViewer>
                        <ListView
                            x:Name="RegnumsList3"
                            Width="Auto"
                            Height="400"
                            MinWidth="400"
                            HorizontalAlignment="Left"
                            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1"
                            ItemsSource="{Binding Source={StaticResource RegnumsList}}"
                            SelectionMode="Single">
                            <ListView.SelectedItem>
                                <Binding Path="(Selector.SelectedItem)" />
                            </ListView.SelectedItem>
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="RegnumDataTemplate" x:DataType="models:Tbl03Regnum">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse
                                            x:Name="Ellipse"
                                            Grid.RowSpan="2"
                                            Width="32"
                                            Height="32"
                                            Margin="6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="12,6,0,0"
                                            x:Phase="1"
                                            Style="{ThemeResource BaseTextBlockStyle}"
                                            Text="{x:Bind RegnumId}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="12,0,0,6"
                                            x:Phase="2"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind RegnumName}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="112,0,0,6"
                                            x:Phase="3"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind Subregnum}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="212,0,0,6"
                                            x:Phase="4"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind Author}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="312,0,0,6"
                                            x:Phase="5"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind AuthorYear}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
        <TabView Grid.Row="1" Grid.Column="0">
            <TabView.TabItems>
                <TabViewItem Header="Phylum">
                    <TabViewItem.IconSource>
                        <SymbolIconSource Symbol="Filter" />
                    </TabViewItem.IconSource>
                    <ScrollViewer>
                        <ListView
                            x:Name="PhylumsList3"
                            Width="Auto"
                            Height="400"
                            MinWidth="400"
                            HorizontalAlignment="Left"
                            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1"
                            ItemsSource="{Binding Source={StaticResource PhylumsList}}"
                            SelectionMode="Single">
                            <ListView.SelectedItem>
                                <Binding Path="(Selector.SelectedItem)" />
                            </ListView.SelectedItem>
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="PhylumDataTemplate" x:DataType="models:Tbl06Phylum">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse
                                            x:Name="Ellipse"
                                            Grid.RowSpan="2"
                                            Width="32"
                                            Height="32"
                                            Margin="6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="12,6,0,0"
                                            x:Phase="1"
                                            Style="{ThemeResource BaseTextBlockStyle}"
                                            Text="{x:Bind PhylumId}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="12,0,0,6"
                                            x:Phase="2"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind PhylumName}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="212,0,0,6"
                                            x:Phase="4"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind Author}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="312,0,0,6"
                                            x:Phase="5"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Text="{x:Bind AuthorYear}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </TabViewItem>
            </TabView.TabItems>

        </TabView>
    </Grid>
</Page>
