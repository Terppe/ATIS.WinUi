<Window
    x:Class="ATIS.WinUi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <NavigationView
                x:Name="NaviView"
                Header="ATIS"   
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="True" 
                IsTitleBarAutoPaddingEnabled="False"
                PaneDisplayMode="Auto"
                PaneTitle=""
                SelectionChanged="NaviView_SelectionChanged">
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        Content="Home"
                        Icon="Home"
                        IsSelected="True"
                        Tag="Home"
                        ToolTipService.ToolTip="Home" />
                    <NavigationViewItemSeparator />
                    <NavigationViewItemHeader x:Name="MainPagesHeader1" Content="Main pages" />
                    <NavigationViewItem
                        Content="Fishes"
                        Icon="Contact"
                        Tag="Fish"
                        ToolTipService.ToolTip="Fish" />
                    <NavigationViewItem
                        Content="Plants"
                        Icon="Contact"
                        Tag="Plant"
                        ToolTipService.ToolTip="Plant" />
                    <NavigationViewItem
                        Content="Diseases"
                        Icon="Contact"
                        Tag="Disease"
                        ToolTipService.ToolTip="Diseases" />
                    <NavigationViewItem
                        Content="Foods"
                        Icon="Page2"
                        Tag="Food"
                        ToolTipService.ToolTip="Foods" />
                    <NavigationViewItem Content="Divs" Tag="Div">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB3C;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Search" Tag="Search">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7FC;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem
                        Content="About"
                        Icon="Audio"
                        Tag="About" />
                    <NavigationViewItem
                        Content="Collections"
                        Icon="Keyboard"
                        ToolTipService.ToolTip="Collections">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem
                                Content="User"
                                Icon="Page"
                                Tag="User"
                                ToolTipService.ToolTip="User" />
                            <NavigationViewItem
                                Content="Admin"
                                Icon="Mail"
                                Tag="Admin"
                                ToolTipService.ToolTip="Admin" />
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>
                    <NavigationViewItem x:Name="N" Content="N" />
                </NavigationView.MenuItems>

                <NavigationView.AutoSuggestBox>
                    <!--
                        See AutoSuggestBox documentation for
                        more info about how to implement search.
                    -->
                    <AutoSuggestBox x:Name="NavViewSearchBox" QueryIcon="Find" />
                </NavigationView.AutoSuggestBox>

                <ScrollViewer Margin="0,0,0,12">
                    <Frame x:Name="ContentFrame" Padding="12,0,12,12" />
                    <!--<Frame x:Name="ContentFrame" Padding="12,0,12,12">
                        <Frame.Background>
                            <ImageBrush ImageSource="Assets/xaml-islands.jpg"/>
                        </Frame.Background>
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <NavigationThemeTransition />
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>-->
                </ScrollViewer>

            </NavigationView>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState>
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="{x:Bind NaviView.CompactModeThresholdWidth}" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>

                            <!--  Remove the next 3 lines for left-only navigation.  -->

                            <Setter Target="NavView.PaneDisplayMode" Value="LeftCompact" />
                            <Setter Target="NavViewSearchBox.Width" Value="200" />
                            <Setter Target="MainPagesHeader.Visibility" Value="Collapsed" />

                            <!--  Leave the next line for left-only navigation.  -->

                            <Setter Target="ContentFrame.Padding" Value="24,0,24,24" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </StackPanel>

        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button x:Name="MyButton" Click="Login_Click">Login</Button>
